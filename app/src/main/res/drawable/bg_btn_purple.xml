<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <corners android:radius="5dp"/>

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"/>

            <solid android:color="#4FA1DE"/>

            <stroke android:width="1dp" android:color="@color/theme_col"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp"/>

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"/>

            <solid android:color="#4FA1DE"/>

            <stroke android:width="1dp" android:color="@color/theme_col"/>
        </shape>
    </item>
    <item>
        <shape android:innerRadius="50dp">
            <corners android:radius="5dp"/>

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"/>

            <solid android:color="@color/theme_col"/>

            <stroke android:width="0.5dp" android:color="@color/theme_col"/>
        </shape>
    </item>

</selector>