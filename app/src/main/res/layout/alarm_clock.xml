<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="@color/theme_col"
        android:padding="0dp" >

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/alarm_clock"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_bigger" />

        <Button
            android:id="@+id/btn_left"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_menu_item"
            android:text="@string/back"
            android:textColor="@drawable/text_col_w_g"
            android:textSize="@dimen/textSize_normal" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_item" >

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_purple"
            android:text="@string/save"
            android:textSize="@dimen/textSize_normal"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@id/rl_title"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
	            android:id="@+id/rl_alarm_clock_1"
	            android:layout_width="match_parent"
	            android:layout_height="60dp"
	            android:layout_marginTop="1dp"
	            android:background="@drawable/bg_item"
	            android:gravity="center_vertical" >
	
	            <CheckBox
	                android:id="@+id/cb_alarm_clock_1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="20dp"
	                android:button="@drawable/bg_turn" />

	            <LinearLayout
	                android:layout_toLeftOf="@id/cb_alarm_clock_1"
	                android:layout_width="match_parent"
	            	android:layout_height="match_parent"
	            	android:gravity="center_vertical"
	            	android:layout_marginRight="12dp"
	            	android:background="@drawable/bg_item"
	            	android:orientation="vertical">

	            	<TextView
	            	    android:id="@+id/tv_clock_time_1"
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_marginLeft="30dp"
	            	    android:text="00:00"
	            	    android:textColor="@color/black"
	            	    android:textSize="@dimen/textSize_normal"/>
	            	<TextView
	            	    android:id="@+id/tv_clock_week_1"
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_marginLeft="30dp"
	            	    android:text=""
	            	    android:textColor="@color/text_col"
	            	    android:textSize="@dimen/textSize_small" />
	            </LinearLayout>
            </RelativeLayout>
            <View 
			    android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"/>
            <RelativeLayout
	            android:id="@+id/rl_alarm_clock_2"
	            android:layout_width="match_parent"
	            android:layout_height="60dp"
	            android:layout_marginTop="1dp"
	            android:background="@drawable/bg_item"
	            android:gravity="center_vertical" >

	            <CheckBox
	                android:id="@+id/cb_alarm_clock_2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="20dp"
	                android:button="@drawable/bg_turn" />

	            <LinearLayout
	                android:layout_toLeftOf="@id/cb_alarm_clock_2"
	                android:layout_width="match_parent"
	            	android:layout_height="match_parent"
	            	android:gravity="center_vertical"
	            	android:layout_marginRight="12dp"
	            	android:background="@drawable/bg_item"
	            	android:orientation="vertical">

	            	<TextView
	            	    android:id="@+id/tv_clock_time_2"
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_marginLeft="30dp"
	            	    android:text="00:00"
	            	    android:textColor="@color/black"
	            	    android:textSize="@dimen/textSize_normal"/>
	            	<TextView
	            	    android:id="@+id/tv_clock_week_2"
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_marginLeft="30dp"
	            	    android:text=""
	            	    android:textColor="@color/text_col"
	            	    android:textSize="@dimen/textSize_small" />
	            </LinearLayout>
            </RelativeLayout>
            <View 
			    android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"/>
            <RelativeLayout
	            android:id="@+id/rl_alarm_clock_3"
	            android:layout_width="match_parent"
	            android:layout_height="60dp"
	            android:layout_marginTop="1dp"
	            android:background="@drawable/bg_item"
	            android:gravity="center_vertical" >

	            <CheckBox
	                android:id="@+id/cb_alarm_clock_3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="20dp"
	                android:button="@drawable/bg_turn" />

	            <LinearLayout
	                android:layout_toLeftOf="@id/cb_alarm_clock_3"
	                android:layout_width="match_parent"
	            	android:layout_height="match_parent"
	            	android:gravity="center_vertical"
	            	android:layout_marginRight="12dp"
	            	android:background="@drawable/bg_item"
	            	android:orientation="vertical">

	            	<TextView
	            	    android:id="@+id/tv_clock_time_3"
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_marginLeft="30dp"
	            	    android:text="00:00"
	            	    android:textColor="@color/black"
	            	    android:textSize="@dimen/textSize_normal"/>
	            	<TextView
	            	    android:id="@+id/tv_clock_week_3"
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_marginLeft="30dp"
	            	    android:text=""
	            	    android:textColor="@color/text_col"
	            	    android:textSize="@dimen/textSize_small" />
	            </LinearLayout>
            </RelativeLayout>
            <View 
			    android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>