<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/theme_col"
        android:padding="0dp" >

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/pedometer"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_bigger"/>

        <Button
            android:id="@+id/btn_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_menu_item"
            android:text="@string/back"
            android:textColor="@drawable/text_col_w_g"
            android:textSize="@dimen/textSize_normal"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_item"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:src="@drawable/pedometer" />

			<View 
			    android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/bg_color"/>
            <RelativeLayout
                android:id="@+id/rl_pedometer_count"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/pedometer_count"
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_pedometer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="0"
                    android:textColor="@color/text_col"
                    android:textSize="@dimen/textSize_normal" />
            </RelativeLayout>

			<View 
			    android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"/>
            <RelativeLayout
                android:id="@+id/rl_total_milegle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/total_milegle"
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_total_milegle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="0"
                    android:textColor="@color/text_col"
                    android:textSize="@dimen/textSize_normal" />
            </RelativeLayout>

			<View 
			    android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"/>
            <RelativeLayout
                android:id="@+id/rl_burn_calories"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/burn_calories"
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_burn_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="0"
                    android:textColor="@color/text_col"
                    android:textSize="@dimen/textSize_normal" />
            </RelativeLayout>

        </LinearLayout>
     </ScrollView>

</RelativeLayout>