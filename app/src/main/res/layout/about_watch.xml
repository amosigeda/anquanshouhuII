<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/theme_col"
        android:padding="0dp" >

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/about_watch"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_bigger" />

        <Button
            android:id="@+id/btn_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_menu_item"
            android:text="@string/back"
            android:textColor="@drawable/text_col_w_g"
            android:textSize="@dimen/textSize_normal" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/bg_item"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/iv_QR_Code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/watch_QR_Code"
                    android:textColor="@color/text_col"
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/iv_sweep_bound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/sweep_bound"
                    android:textSize="@dimen/textSize_normal" />
            </LinearLayout>
			<View 
			    android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/bg_color"/>
            <RelativeLayout
                android:id="@+id/rl_watch_bound_no"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/iv_bound_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/watch_bound_no"
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_watch_bound_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:textColor="@color/text_col"
                    android:textSize="@dimen/textSize_normal" />
            </RelativeLayout>
			<View 
			    android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/bg_color"/>
			
            <LinearLayout
                android:id="@+id/rl_watch_firmware_version"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_item"
                android:gravity="center_vertical" 
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_firmware_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/watch_firmware_version"
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_watch_firmware_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:text="watch_firmware_version"
                    android:textColor="@color/text_col"
                    android:textSize="@dimen/textSize_normal" />
            </LinearLayout>
            
			<View 
			    android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"/>
            <RelativeLayout
                android:id="@+id/rl_watch_carr"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_carrieroperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/watch_carrieroperator"
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_watch_carr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="watch_carr_version"
                    android:textColor="@color/text_col"
                    android:textSize="@dimen/textSize_normal" />
            </RelativeLayout>
			<View 
			    android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"
                />
            <RelativeLayout
                android:id="@+id/rl_model"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/model"
                     android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:textColor="@color/text_col"
                    android:textSize="@dimen/textSize_normal" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_configuration"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"
                android:text="@string/configuration"
                android:textColor="@color/text_col" 
                android:textSize="@dimen/textSize_normal"
                android:background="@color/bg_color"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_GPS"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/bg_item"
                android:gravity="center_vertical" 
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/GPS"
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_GPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:textColor="@color/text_col" 
                    android:textSize="@dimen/textSize_normal"/>
            </RelativeLayout>
			<View 
			    android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"
                android:visibility="gone"/>
            <RelativeLayout
                android:id="@+id/rl_WIFI"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/WIFI"
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_WIFI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:textColor="@color/text_col"
                     android:textSize="@dimen/textSize_normal" />
            </RelativeLayout>
			<View 
			    android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"
                android:visibility="gone"/>
            <RelativeLayout
                android:id="@+id/rl_three_axis_sensor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_item"
                android:gravity="center_vertical" 
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/three_axis_sensor"
                     android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:id="@+id/tv_three_axis_sensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:textColor="@color/text_col"
                     android:textSize="@dimen/textSize_normal" />
            </RelativeLayout>
            <View 
			    android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_unbound"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:background="@drawable/bg_btn_purple"
                android:text="@string/unbound"
                android:textColor="#ffffff"
                 android:textSize="@dimen/textSize_normal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>