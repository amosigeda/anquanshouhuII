<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_list_item"
                android:descendantFocusability="blocksDescendants">

    <LinearLayout
            android:id="@+id/ll_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center"
                    android:src="@drawable/head_bg"/>

            <vip.inteltech.gat.viewutils.CircularImageView
                    android:id="@+id/iv_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/head_empty"/>

            <TextView
                    android:id="@+id/tv_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tv_purple"
                    android:layout_gravity="top|right"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_smaller"
                    android:text="@string/wo"/>

            <TextView
                    android:id="@+id/tv_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tv_purple"
                    android:layout_gravity="bottom|right"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_smaller"
                    android:text="管"/>
        </FrameLayout>


        <TextView
                android:id="@+id/tv_name"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:gravity="center"
                android:text="宝贝"
                android:textColor="@color/text_col"
                android:textSize="@dimen/textSize_small"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ll_a"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13631290241"
                android:textSize="@dimen/textSize_small"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_cornet_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cornet_mh"
                    android:textColor="@color/theme_col"
                    android:textSize="@dimen/textSize_small"/>

            <TextView
                    android:id="@+id/tv_cornet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13631290241"
                    android:textSize="@dimen/textSize_small"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:id="@+id/iv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/app_type"/>

</RelativeLayout>